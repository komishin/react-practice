{
  "compilerOptions": {
    "target": "ES6",
    "module": "nodeNext",
    "moduleResolution": "nodeNext",
    "strict": true,
    // ESモジュールとCommonJSモジュールの互換性を向上させるための設定
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "jsx": "react",
    // 参照する型定義のリストを明示的に指定する
    "types": [
      "jest",
      "@testing-library/jest-dom",
      "@testing-library/react",
      "node"
    ]
  },
  "include": ["src/**/*"]
}
